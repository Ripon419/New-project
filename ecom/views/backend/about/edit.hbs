<main id="main" class="main">

  <div class="pagetitle">
    <nav>
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/admin">Admin</a></li>
        <li class="breadcrumb-item"><a >About</a></li>
        <li class="breadcrumb-item active">Edit</li>
      </ol>
    </nav>
  </div><!-- End Page Title -->
  <section class="section">

      <div class="col-lg-12">

        <div class="card">
          <div class="card-body">
              <div class="mt-4 mb-4">
                <h2 class="mt-5 mb-5 border border-success bg-success text-white rounded   " style="text-align: center;">About Edit</h5>

              </div>
                    <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger">
          </div>

            <!-- Floating Labels Form -->
            <form class="row g-3 my-3" method="post" action="/admin/about/{{about.id}}/update"encType="multipart/form-data">
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" value="{{about.title1}}" class="form-control" placeholder="Title1" name="title1">
                  <label>Title1</label>
                </div>
              </div>
              <div class="col-md-6">
                <div class="form-floating">
                  <input type="text" value="{{about.title2}}" class="form-control" placeholder="Title2" name="title2">
                  <label>Title2</label>
                </div>
              </div>
              <div class="col-md-12">
                {{!-- <label>Image</label>
                <div class="form-floating">
                    <img src="/{{about.image}}" width="200px" alt="{{about.title}}">
                  <input type="file" class="form-control" placeholder="Image"
                    name="image">
                  
                </div> --}}
                <div>
                {{!-- <label for="formFileLg" class="form-label">Image</label> --}}
                 <img src="/{{about.image}}" width="200px" class="border border-info mb-1" alt="{{about.title}}">
                 <input class="form-control form-control-lg" id="formFileLg" placeholder="Image" name="image" type="file">
              </div>
              </div>
              <div class="col-12">
                <div class="form-floating">
                  <textarea type="text"  class="form-control" placeholder="Details" style="height: 100px;" name="details">{{about.details}}</textarea>
                  <label>Details</label>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-floating">
                  <input type="text" value="{{about.map}}" class="form-control" placeholder="Map" name="map">
                  <label>Map</label>
                </div>
              </div>
              <div class="text-center">
                <button type="submit" class="btn btn-primary">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
              </div>
            </form><!-- End floating Labels Form -->

          </div>
        </div>

      </div>
  </section>

</main><!-- End #main -->