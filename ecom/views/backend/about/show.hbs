<main id="main" class="main">
    <div class="pagetitle">
        <h1>Dashboard</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/admin">Home</a></li>
                <li class="breadcrumb-item active">{{title}}</li>
            </ol>
        </nav>
    </div><!-- End Page Title -->

    <section class="section dashboard">

          <div class="card">
            <div class="card-body">
                  <div class="mt-4 mb-4">
                <h2 class="mt-5 mb-5 border border-success bg-success text-white rounded   " style="text-align: center;">About Show</h5>

              </div>
                    
                <a class="btn btn-success btn-lg position-center mt-3 mb-2 text-center" href="/admin/about/create"><i class="bi bi-plus-circle"></i>&nbsp Create</a>
                <div class="h4 pb-2 mb-4 text-danger border-bottom border-danger">
                    </div>



              <!-- Dark Table -->
              <table class="table ">
                <thead>
                </thead>
                <tbody>
                    <tr class="p-3 bg-info bg-opacity-10 border border-info border-start-0 rounded-end">
                        <th >Title</th>
                        <td>:</td>
                        <td>
                            {{about.title}}
                        </td>
                    </tr>

                    <tr>
                        <th>Details</th>
                        <td>:</td>
                        <td>
                            {{about.details}}
                        </td>
                    </tr>

                    <tr>
                        <th>Image</th>
                        <td>:</td>
                        <td>
                            <img src="/{{about.image}}" width="200px" alt="">
                        </td>
                    </tr>
                </tbody>
              </table>
             
              <!-- End Dark Table -->

            </div>
          </div>
    </section>
</main>